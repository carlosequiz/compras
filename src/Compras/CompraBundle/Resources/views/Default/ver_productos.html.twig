{% extends '::frontend.html.twig' %}

{% block title %}Compras, cada día ofertas increíbles en tu ciudad con descuentos de hasta el 90%{% endblock %}
{% block id 'productos' %}

{% block navbar %}
    {% include 'CompraBundle:Default:navbarFixed.html.twig' %}
{% endblock %}

{% block section %}
<br>
<br>
<div id="productos"></div>
<a id="link_productos" href="#">Cargar productos</a>

<script>

$(document).ready(function(){
        $('#link_productos').click(function(){
                $('#productos').load('{{ path('producto_listar') }}');
        });
});

</script>

{% endblock %}