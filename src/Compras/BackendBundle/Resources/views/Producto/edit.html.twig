{% extends '::backend.html.twig' %}

{% block body -%}
    <h1>Editar Producto</h1>
    

    <form class="form-horizontal" action="{{ path('producto_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    {{ form_errors(edit_form) }}
    
    <div class="form-group">
        <label class="col-lg-2 control-label">Nombre:</label>
        {{ form_errors(edit_form.nombre) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.nombre, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Descripción:</label>
        {{ form_errors(edit_form.descripcion) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.descripcion, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
            
    <div class="form-group">
        <label class="col-lg-2 control-label">Precio:</label>
        {{ form_errors(edit_form.precio) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.precio, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
            
    <div class="form-group">
        <label class="col-lg-2 control-label">Descuento:</label>
        {{ form_errors(edit_form.descuento) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.descuento, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Fecha de Publicación:</label>
        {{ form_errors(edit_form.fechaPublicacion) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.fechaPublicacion) }}
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label">Fecha de Expiración:</label>
        {{ form_errors(edit_form.fechaExpiracion) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.fechaExpiracion) }}
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label">Foto:</label>
        
        {{ form_errors(edit_form.foto) }}
        
        <img src="{{  asset(directorio_imagenes ~ entity.rutaFoto) }}" />
        <div class="col-lg-5">
            {{ form_widget(edit_form.foto) }}
            <div class="help-block">Tamaño máximo: 500 KB. Formato preferido: JPEG.</div>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label">Tienda:</label>
        {{ form_errors(edit_form.tienda) }}
        <div class="col-lg-5">
            {{ form_widget(edit_form.tienda) }}
        </div>
    </div>
    
    {{ form_widget(edit_form._token) }}
            
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
    </form>

<ul class="record_actions">
    <li>
        <a href="{{ path('producto') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
