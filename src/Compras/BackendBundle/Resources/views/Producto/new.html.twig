{% extends '::backend.html.twig' %}

{% block body -%}
    <h1>Crear Producto</h1>

    <form class="form-horizontal" action="{{ path('producto_create') }}" method="post" {{ form_enctype(form) }}>
    <div>
    {{ form_errors(form) }}

    <div class="form-group">
        <label class="col-lg-2 control-label">Nombre:</label>
        {{ form_errors(form.nombre) }}
        <div class="col-lg-5">
            {{ form_widget(form.nombre, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Descripción:</label>
        {{ form_errors(form.descripcion) }}
        <div class="col-lg-5">
            {{ form_widget(form.descripcion, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
            
    <div class="form-group">
        <label class="col-lg-2 control-label">Precio:</label>
        {{ form_errors(form.precio) }}
        <div class="col-lg-5">
            {{ form_widget(form.precio, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>
            
    <div class="form-group">
        <label class="col-lg-2 control-label">Descuento:</label>
        {{ form_errors(form.descuento) }}
        <div class="col-lg-5">
            {{ form_widget(form.descuento, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Fecha de Publicación:</label>
        {{ form_errors(form.fechaPublicacion) }}
        <div class="col-lg-5">
            {{ form_widget(form.fechaPublicacion) }}
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label">Fecha de Expiración:</label>
        {{ form_errors(form.fechaExpiracion) }}
        <div class="col-lg-5">
            {{ form_widget(form.fechaExpiracion) }}
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label">Foto:</label>
        {{ form_errors(form.foto) }}
        <div class="col-lg-5">
            {{ form_widget(form.foto) }}
        </div>
    </div>
    
    {{ form_widget(form._token) }}
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
    </div>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('producto') }}">
            Regresar
        </a>
    </li>
</ul>
{% endblock %}
