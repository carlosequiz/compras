{% extends '::frontend.html.twig' %}

{% block section %}

<h1>{{ "Carrito de Compra" | trans }}</h1>

<div>
        {{ 'Total: ' ~ cart.itemsTotal | trans }}
</div>

{% for item in cart.items %}
    <div>
        {{ 'Cantidad: ' ~ item.cantidad | trans }}
        {{ 'Precio Unitario: ' ~ item.precioUnitario | trans }}
        <br>
    </div>
{% else %}
  <h1>NO HAY ITEMS</h1>
{% endfor %}
  
{% endblock %}