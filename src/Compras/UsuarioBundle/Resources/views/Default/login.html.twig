{% extends '::frontend.html.twig' %}

{% block title %}Formulario de acceso{% endblock %}
{% block id 'login' %}

{% block article %}

{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
    
    <div class="container">
        <form class="form-signin" role="form" action="{{ path('usuario_login_check') }}" method="post">
            <h2 class="form-signin-heading">{{ "Accede a tu cuenta" | trans }}</h2>
            <input type="email" class="form-control" placeholder="{{ "Email" | trans }}" id="username" name="_username" value="{{ last_username }}" required autofocus/>
            <input type="password" class="form-control" placeholder="{{ "Contraseña" | trans }}" required id="password" name="_password" />
            <label class="checkbox">
                {{ "No cerrar sesión" | trans }}
                <input type="checkbox" value="remember-me" id="no_cerrar" name="_remember_me" />
            </label>

            <button class="btn btn-lg btn-primary btn-block" type="submit" name="login">{{ "Entrar" | trans }}</button>
        </form>
        
        <section id="registrar">
            <a href="{{ path('usuario_registro') }}">{{ "Regístrate gratis como usuario" | trans }}</a>
        </section>
    </div>
{% endblock %}